<% js_option('AuthenticityToken', form_authenticity_token) %>
<% js_option('ControllerAction', current_controller_class) %>
<% js_option('Debug', Rails.env != 'production') %>
<% js_option('GaGoal', flash[:ga_goal]) if flash[:ga_goal] %>
<% js_option('Paths', {}) %>
<% js_option('GoogleMapsApiKey', Uke::Application::custom_config(:google_maps_api_key)) %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Wyszukiwarka pozwoleń UKE</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <div class="header">
       <ul class="nav nav-pills pull-right">
          <li><a href="/" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span> Szukaj</a></li>
          <% if user_signed_in? %>
            <li><%= link_to content_tag(:i, '', :class => 'glyphicon glyphicon-book')   + ' ' + t('controller.layout.log'), logs_path, class: 'btn btn-success' %></li>
            <li><%= link_to content_tag(:i, '', :class => 'glyphicon glyphicon-user')   + ' ' + t('controller.layout.myaccount'), edit_user_registration_path, class: 'btn btn-default' %></li>
            <li><%= link_to content_tag(:i, '', :class => 'glyphicon glyphicon-log-in') + ' ' + t('controller.layout.logout', name: current_user.nickname), destroy_user_session_path, class: 'btn btn-default' %></li>
          <% else %>
            <li><%= link_to content_tag(:i, '', :class => 'glyphicon glyphicon-log-in') + ' ' + t('controller.layout.login'), new_user_session_path, class: 'btn btn-default' %></li>
          <% end %>
        </ul>
        <h3 class="text-muted">Baza nasłuchów</h3>
      </div>
      <% if notice %><div class="alert alert-info"><p><%= notice %></p></div><% end %>
      <% if alert  %><div class="alert alert-danger"><p><%= alert %></p></div><% end %>
      <%= yield %>
      <hr>
      <footer>
        <p class="text-muted"><small>Arkadiusz Kuryłowicz 2014<br />
        Może zainteresuje Cię także <a href="http://serwisant-online.pl/" title="Darmowa aplikacja do prowadzenia napraw serwisowych">darmowa aplikacja do prowadzenia napraw serwisowych</a>?</small></p>
      </footer>
    </div>
    <script type="text/javascript">var application_js_options = <%= raw @js_options.to_json %>;</script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </body>
</html>
