<% js_option('AuthenticityToken', form_authenticity_token) %>
<% js_option('ControllerAction', current_controller_class) %>
<% js_option('Debug', Rails.env != 'production') %>
<% js_option('GaGoal', flash[:ga_goal]) if flash[:ga_goal] %>
<% js_option('Paths', {}) %>
<% js_option('GoogleMapsApiKey', Rails.application.secrets.google_maps_api_key) %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Wyszukiwarka pozwoleń UKE</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Wyszukiwarka pozwoleń UKE</a>
        </div>
        <div class="navbar-collapse collapse">
          <form class="navbar-form navbar-right" role="form">
            <div class="form-group">
              <input type="text" placeholder="Częstotliwość lub lokalizacja" class="form-control" name="q" value="<%= params[:q] %>">
            </div>
            <button type="submit" class="btn btn-success">Szukaj</button>
          </form>
        </div><!--/.navbar-collapse -->
      </div>
    </div>
    <div class="container">
      <%= yield %>
      <hr>
      <footer>
        <p class="text-muted"><small>Arkadiusz Kuryłowicz 2014<br />
        Może zainteresuje Cię także <a href="http://serwisant-online.pl/" title="Darmowa aplikacja do prowadzenia napraw serwisowych">darmowa aplikacja do prowadzenia napraw serwisowych</a>?</small></p>
      </footer>
    </div>
    <script type="text/javascript">var application_js_options = <%= raw @js_options.to_json %>;</script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </body>
</html>
